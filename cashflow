server {
    listen 443 ssl;
    server_name pengeflyt.com www.pengeflyt.com;

    ssl_certificate /etc/letsencrypt/live/pengeflyt.com/fullchain.pem;
    ssl_certificate_key /etc/letsencrypt/live/pengeflyt.com/privkey.pem;
    include /etc/letsencrypt/options-ssl-nginx.conf;
    ssl_dhparam /etc/letsencrypt/ssl-dhparams.pem;

    location / {
        proxy_pass http://localhost:3000;
        include snippets/proxy-headers.conf;
    }
}

server {
    listen 443 ssl;
    server_name api.pengeflyt.com;

    ssl_certificate /etc/letsencrypt/live/api.pengeflyt.com/fullchain.pem;
    ssl_certificate_key /etc/letsencrypt/live/api.pengeflyt.com/privkey.pem;

    location / {
        proxy_pass http://localhost:8080;
        include snippets/proxy-headers.conf;
    }
}

server {
    listen 443 ssl;
    server_name cashflow.hanasand.com;

    ssl_certificate /etc/letsencrypt/live/cashflow.hanasand.com/fullchain.pem;
    ssl_certificate_key /etc/letsencrypt/live/cashflow.hanasand.com/privkey.pem;

    location / {
        proxy_pass http://localhost:3000;
        include snippets/proxy-headers.conf;
    }
}

server {
    listen 443 ssl default_server;
    server_name _;

    return 301 https://$host$request_uri;
}
