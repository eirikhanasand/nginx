server {
    listen 443 ssl;
    listen [::]:443 ssl;
    server_name name-pending.hanasand.com;
    ssl_certificate /etc/letsencrypt/live/hanasand.com/fullchain.pem;
    ssl_certificate_key /etc/letsencrypt/live/hanasand.com/privkey.pem;

    include snippets/errors.conf;

    error_page 401 /401.html;

    location = /401.html {
        root /etc/nginx/sites-available/internal/fallback;
        internal;
    }

    location / {
        access_by_lua_file /etc/nginx/lua/traffic_logger.lua;
        if ($http_user_agent !~* "java") {
            return 401;
        }

        proxy_pass http://localhost:6969;
        include snippets/proxy-headers.conf;
    }
}

server {
    listen 443 ssl;
    listen [::]:443 ssl;
    server_name internal.hanasand.com;
    ssl_certificate /etc/letsencrypt/live/hanasand.com/fullchain.pem;
    ssl_certificate_key /etc/letsencrypt/live/hanasand.com/privkey.pem;

    include snippets/errors.conf;

    error_page 401 /401.html;

    location = /401.html {
        root /etc/nginx/sites-available/internal/fallback;
        internal;
    }

    location / {
        access_by_lua_file /etc/nginx/lua/traffic_logger.lua;
        if ($http_user_agent !~* "hanasand_internal") {
            return 401;
        }

        proxy_pass http://localhost:8200;
        include snippets/proxy-headers.conf;
    }
}

server {
    listen 443 ssl;
    listen [::]:443 ssl;
    server_name cdn.hanasand.com;

    ssl_certificate /etc/letsencrypt/live/hanasand.com/fullchain.pem;
    ssl_certificate_key /etc/letsencrypt/live/hanasand.com/privkey.pem;

    include snippets/errors.conf;

    location / {
        access_by_lua_file /etc/nginx/lua/traffic_logger.lua;
        proxy_pass http://localhost:8501;
        include snippets/proxy-headers.conf;
    }
}

map $host $vm_target {
    ~^([a-z0-9-]+-[a-z0-9-]+-[a-z0-9-]+)\.hanasand\.com$ http://$1.lxd:80;
    default "";
}

server {
    listen 443 ssl;
    listen [::]:443 ssl;
    server_name *.hanasand.com;

    ssl_certificate /etc/letsencrypt/live/hanasand.com/fullchain.pem;
    ssl_certificate_key /etc/letsencrypt/live/hanasand.com/privkey.pem;
    include /etc/letsencrypt/options-ssl-nginx.conf;
    ssl_dhparam /etc/letsencrypt/ssl-dhparams.pem;

    include snippets/errors.conf;
    resolver 10.177.195.1 valid=10s ipv6=off;

    location / {
        access_by_lua_file /etc/nginx/lua/traffic_logger.lua;
        include snippets/proxy-headers.conf;
        proxy_pass $vm_target;
        proxy_ssl_verify off;
        proxy_ssl_server_name on;

        error_page 500 502 = @fallback;
    }

    location @fallback {
        return 301 https://hanasand.com;
    }
}
